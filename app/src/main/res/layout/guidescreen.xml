<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Hero image -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardHero"
        android:layout_width="0dp"
        android:layout_height="300dp"
        android:layout_margin="16dp"
        app:cardCornerRadius="24dp"
        app:cardElevation="2dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imgHero"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/sample_mountain"/>

            <!-- Badge back -->


            <!-- Title on image -->

            <ImageButton
                android:id="@+id/btnBack"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:background="@drawable/bg_badge_circle"
                android:contentDescription="@string/back"
                android:padding="10dp"
                app:srcCompat="@drawable/ic_back"
                android:scaleType="centerInside"
                app:tint="#333333" />

            <TextView
                android:id="@+id/txtTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom|start"
                android:layout_margin="20dp"
                android:text="Manali"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="32sp"
                android:shadowColor="#80000000"
                android:shadowDx="0" android:shadowDy="1" android:shadowRadius="4"/>
        </FrameLayout>
    </androidx.cardview.widget.CardView>

    <!-- Content card overlaps hero -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="24dp"
        app:cardElevation="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/cardHero"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:translationY="-36dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- About -->
            <TextView
                android:id="@+id/labelAbout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Manali"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111111"/>

            <TextView
                android:id="@+id/txtAbout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Loading description..."
                android:textColor="#6B6B6B"
                android:lineSpacingExtra="2dp"
                android:textSize="14sp"/>

            <!-- Rating row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <!-- Icon rating -->
                <ImageView
                    android:id="@+id/iconRating"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_star"
                    app:tint="#FFC107"
                    android:contentDescription="@string/rating"/>

                <!-- Text rating -->
                <TextView
                    android:id="@+id/txtRating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="6dp"
                    android:text="4.79 (78 reviews)"
                    android:textColor="#666666"
                    android:textSize="13sp"/>

                <!-- See reviews link -->
                <TextView
                    android:id="@+id/btnSeeReviews"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="See reviews"
                    android:textColor="#9E9E9E"
                    android:textSize="13sp"/>
            </LinearLayout>

            <!-- Pricing label -->
            <TextView
                android:id="@+id/labelPricing"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Pricing"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#111111"/>

            <!-- Item 1 -->
            <LinearLayout
                android:id="@+id/rowTravel"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:layout_marginTop="12dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_circle"
                    android:padding="8dp"
                    android:src="@drawable/ic_bag"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtTravelTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Traveling"
                        android:textStyle="bold"
                        android:textColor="#111111"/>
                    <TextView
                        android:id="@+id/txtTravelSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="from ₹2999"
                        android:textColor="#8A8A8A"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEEE"/>

            <!-- Item 2 -->
            <LinearLayout
                android:id="@+id/rowHotel"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:background="@drawable/bg_icon_circle"
                    android:padding="8dp"
                    android:src="@drawable/ic_hotel"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="12dp"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/txtHotelTitle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hotels"
                        android:textStyle="bold"
                        android:textColor="#111111"/>
                    <TextView
                        android:id="@+id/txtHotelSub"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="from ₹1999 / night"
                        android:textColor="#8A8A8A"
                        android:textSize="13sp"/>
                </LinearLayout>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/ic_arrow_right"/>
            </LinearLayout>

            <!-- CTA -->
            <Button
                android:id="@+id/btnPlanTrip"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:text="Plan trip"
                android:textColor="@android:color/white"
                android:background="@drawable/bg_cta_gradient"
                android:includeFontPadding="false"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
